<div class="loginPageContainer">
  <div class="header-2"><div class="headerBorder" style="text-align: left;"><img
        src="../images/logo.png"
      /></div><div class="headerMiddle">Tienda de vehículos de lujo</div><div
      class="headerBorder"
      style="text-align: right;"
    ><a
        onclick="history.back()"
        style="cursor: pointer;"
      >Regresar</a></div></div>
  {{#if this.register}}
    <h1
      style="color: white; font-weight: bold; position: relative; top: -50px;"
    >Tu usuario se ha registrado.</h1>
  {{/if}}
  <div
    class="loginContainer col-10 col-sm-9 col-md-5 col-lg-4 col-xl-3 col-xxl-3"
  >
    <h2>Iniciar sesión</h2>
    <div class="loginBody">
      <form action="/api/sessions/login" method="POST">

        <label for="email">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="tumail@mail.com"
        />
        <label for="password">Contraseña:</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="********"
        />
        <label id="error_message" style="color: red; font-size: 12px"></label>
        <button type="submit" id="btn_login">Iniciar sesión</button>
      </form>

    </div>
    <div><button type="button" id="btn_github"><a
          href="api/sessions/github"
        >Iniciar sesión con Github</a></button></div>
    <div class="loginFooter"><a href="/register">Crear una cuenta</a></div>

  </div>

</div>
<script type="module" src="/js/login.js"></script>

