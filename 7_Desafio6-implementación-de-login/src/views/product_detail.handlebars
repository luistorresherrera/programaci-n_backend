<div class="header-2"><div class="headerBorder" style="text-align: left;"><img
      src="../images/logo.png"
    /></div><div class="headerMiddle">{{#each
      products
    }}{{this.title}}{{/each}}</div><div
    class="headerBorder"
    style="text-align: right;"
  ><a onclick="history.back()" style="cursor: pointer;">Regresar</a><a
      onclick="window.location.href = '../cart'"
      style="cursor: pointer;"
    ><img src="../images/cart.png" alt="Cart" style="cursor:pointer;" /></a>
    <a
      onclick="window.location.href = '../account'"
      style="cursor: pointer;"
    ><img
        src="../images/account.png"
        alt="Account"
        style="cursor:pointer;"
      /></a></div></div>

<div class="productsContainer" id="productsContainer">

  {{#each products}}
    <h1>{{this.title}}</h1>

    <div class="productDetailImage" id="productImage">
      <img src="{{this.thumbnail}}" /></div>
    <div class="productDetailDescription" id="productDescription"><p>
        {{this.description}}</p>
      <p><strong>CÃ³digo:</strong> {{this.code}}</p>
      <p><strong>Precio:</strong> USD {{this.price}}</p>
      <p><strong>Stock:</strong> {{this.stock}}</p>

      <p><button type="button" id="btn_addToCart" name="{{this._id}}">Agregar al
          carrito</button></p>
      <p><button type="button" id="btn_cart">Ir al carrito</button></p>
      <p><button type="button" id="btn_back">Regresar</button></p>
    </div>

  {{/each}}
</div>

